{
    "env": {
        "es2021": true,
        "node": true,
        "jquery": true
    },
    "extends": [
        "standard-with-typescript",
        "prettier"
    ],
    "overrides": [{
        "files": ["/src/client/*.js"],
        "rules": {
          "require-jsdoc": "off"
        }
      }],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "rules": {},
    "ignorePatterns": [
        "playwright.*"
    ]
}